@using System.ComponentModel
@using UIAbstraction.Data.Policy
@using UIAbstraction.UI.Components
@inject UIAbstraction.Context.IResource resource

@{

    ViewData["Title"] = "Overview";
}

<div class="row">
    <UICollection.Panel title="Notifications" class="panel-primary">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-11">This is a notification area</div>
        </div>
    </UICollection.Panel>
    <UICollection.Panel title="Policy Detail" class="panel-primary">
        <UICollection.Panel title="Modal popup test" class="panel-primary">
            <UICollection.Tile image-caption="stuff" image-source="http://www.fillmurray.com/100/100" title="Popup Murray" data-toggle="modal" data-target="#modalMurray" />
            <UICollection.Modal id="modalMurray" closebutton="Close" savebutton="Save" title="@resource.GetResource("","","ModalTitlePrefix")">
                <UICollection.Panel title="A worrying development" class="panel-warning">
                    <img src="http://www.fillmurray.com/500/500" />
                </UICollection.Panel>
            </UICollection.Modal>
        </UICollection.Panel>
        <UIComponents.PanelWithTiles model-source="Data.Policy.MakeAChange"
                                     title="@resource.GetResource("", "MakeAChange", "Title")"
                                     class="panel-primary" />
        <UIComponents.PanelWithTiles model-source="Data.Policy.KeyFacts"
                                     title="@resource.GetResource("", "KeyFacts", "Title")"
                                     class="panel-primary" />
    </UICollection.Panel>

</div>
